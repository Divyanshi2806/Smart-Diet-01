rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow nutritionists to read patient data assigned to them
    match /patients/{patientId} {
      allow read, write: if request.auth != null && 
        resource.data.assignedNutritionist == request.auth.uid;
    }
    
    // Allow nutritionists to create diet plans for their patients
    match /dietPlans/{patientId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow chat messages between patients and nutritionists
    match /chats/{patientId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow progress tracking
    match /patientProgress/{patientId} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary: Allow all access for development
    match /{document=**} {
      allow read, write: if true;
    }
  }
}